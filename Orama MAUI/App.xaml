<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:local="clr-namespace:Orama"  
             xmlns:utilities="clr-namespace:Orama.Utility"  
             x:Class="Orama.App">  
    <Application.Resources>  
        <ResourceDictionary>  
            <ResourceDictionary.MergedDictionaries>  
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />  
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />  
            </ResourceDictionary.MergedDictionaries>  
              
            <!-- Converters-->  
            <utilities:InverseBoolConverter x:Key="InverseBoolConverter" />  
            <utilities:StringToBoolConverter x:Key="StringToBoolConverter" />  
            <utilities:BoolToColorConverter x:Key="BoolToColorConverter" />  
            <utilities:BoolToTextColorConverter x:Key="BoolToTextColorConverter" />  
              
        </ResourceDictionary>  
    </Application.Resources>  
</Application>