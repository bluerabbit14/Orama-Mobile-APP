<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orama.Pages.Login"            
             BackgroundColor="#8B62A2">
    <VerticalStackLayout  Padding="20" Spacing="20">
        <Border StrokeThickness="5" WidthRequest="100" HeightRequest="100" BackgroundColor="White">
            <Border.Stroke>
                <SolidColorBrush Color="black"/>
            </Border.Stroke>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="50"/>
            </Border.StrokeShape>
            <Image Source="orama.png" HeightRequest="80" WidthRequest="80" Margin="0,20"></Image>
        </Border>
        <Grid ColumnDefinitions="*" RowSpacing="10" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" x:Name="EmailBox" BackgroundColor="White">
                <Border.Stroke>
                    <SolidColorBrush Color="grey"/>
                </Border.Stroke>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5"/>
                </Border.StrokeShape>
                <Grid ColumnDefinitions="auto,*">
                    <Image Grid.Column="0" Margin="10,0,5,0" Source="{AppThemeBinding Light=envelope.png,Dark=envelope_light.png}" HeightRequest="20" WidthRequest="20"></Image>
                    <Entry x:Name="EmailTextBox"  Grid.Column="1" Placeholder="Email" />
                </Grid>
            </Border>
            <Border Grid.Row="1" x:Name="PasswordBox" IsVisible="true" BackgroundColor="White">
                <Border.Stroke>
                    <SolidColorBrush Color="grey"/>
                </Border.Stroke>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5"/>
                </Border.StrokeShape>
                <Grid ColumnDefinitions="auto,*">
                    <Image Grid.Column="0" Margin="10,0,5,0" Source="{AppThemeBinding Light=lock.png,Dark=lock_light.png}" HeightRequest="20" WidthRequest="20"></Image>
                    <Entry x:Name="PasswordTextBox" Grid.Column="1" Placeholder="Password" />
                </Grid>
            </Border>
            <Button Grid.Row="2" Text="Log In" Clicked="Login_Button_Clicked" ></Button>
        </Grid>
       

        <Label Text="New User?  Sign Up" TextColor="Blue" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="Signup_Tapped"/>
            </Label.GestureRecognizers>
        </Label>
        <Label Text="Forgot Password ?" TextColor="Blue" HorizontalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="forgotPassword_Tapped"/>
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>