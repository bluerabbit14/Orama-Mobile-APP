<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orama.Pages.Home"
             Shell.NavBarIsVisible="True"
             Shell.NavBarHasShadow="True"
             Title="Home">
    <Shell.TitleView>
        <Grid ColumnDefinitions="*,auto,auto">
            <HorizontalStackLayout Grid.Column="0" HorizontalOptions="Center">
                <Image Source="{AppThemeBinding Light=orama.png,Dark=orama_dark.png}"/>  
            </HorizontalStackLayout>
            <HorizontalStackLayout Grid.Column="2" Spacing="10" Margin="10,0">
                <Image Source="notification.png" HeightRequest="30">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Notification_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>
            </HorizontalStackLayout>
        </Grid>
    </Shell.TitleView>
    
    <ScrollView>
       
    </ScrollView>
</ContentPage>